{
  "extends": ["eslint:recommend", "prettier", "plugin:import/errors", "plugin:react/recommended"],
  "plugins": ["react", "import"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "es6": true, // To use Map
    "browser": true, /// To use fetch
    "node": true /// __directory and some feature of node
  },
  "settings": {
    "react": {
      "version": "detect"
    },
    "import/resolver": {
      "node": {
        "extensions": [".js", ".jsx", ".ts", ".tsx"]
      }
    }
  },
  "rules": {
    "react/prop-types": [0], /// off
    "quotes": ["error", "double"]
  }
}
